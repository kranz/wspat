<table>
  <tr>
    <th>Id_paz</th>
    <th>Cognome</th>
    <th>Nome</th>
    <th>Datanascita</th>
    <th>Gruppo</th>
    <th>Rh</th>
    <th>Diagnosi</th>
    <th></th>
